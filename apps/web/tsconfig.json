{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next",
        "allowSyntheticDefaultImports": true
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/styles/*": ["styles/*"],
    },
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
    
, "tailwind.config.ts"  ],
  "exclude": ["node_modules"],
}
